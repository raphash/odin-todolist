{
  "name": "odin-todolist",
  "version": "1.0.0",
  "description": "The Odin Project - Todo List.",
  "main": "index.js",
  "scripts": {
    "build": "webpack --config webpack.prod.js",
    "dev": "webpack serve --config webpack.dev.js",
    "clean": "rm -rf dist/",
    "stage-dist": "git add dist -f && git commit -m 'Deployment commit'",
    "push-dist": "git subtree push --prefix dist origin gh-pages && git checkout main",
    "deploy": "npm-run-all --parallel stage-dist push-dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raphash/odin-todolist.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/raphash/odin-todolist/issues"
  },
  "homepage": "https://github.com/raphash/odin-todolist#readme",
  "devDependencies": {
    "css-loader": "^7.1.2",
    "html-webpack-plugin": "^5.6.3",
    "npm-run-all": "^4.1.5",
    "style-loader": "^4.0.0",
    "uniqid": "^5.4.0",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.0",
    "webpack-merge": "^6.0.1"
  },
  "dependencies": {
    "boxicons": "^2.1.4"
  }
}
